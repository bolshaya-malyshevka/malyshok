	.form.modal-form.sendbot(data-id="sendbot")
		button(data-fancybox-close="" class="fancybox-button fancybox-button--close" title="Закрыть")
			svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24")
