doctype html
html(lang="ru" prefix="og: http://ogp.me/ns#")
	include inc/head.pug
	body
		.body.bvi-no-styles
			header#masthead(role="banner")
				include tpl/header.pug
			.main
				#content(role="main")
					article(id!="page-[*id*]" class!="page page-[*id*] type-page clearfix")
						|<@IF:[*id:neq(1)*]>
						header.entry-header
							h1.entry-title
								|[*longtitle:ifempty=`[*pagetitle*]`*]
						|<@ENDIF>
						.entry-content
							|[*content*]
							div(data-plugin="emoji")
							script(src="/assets/templates/projectsoft/js/emoji.min.js?" + hash + "#hr=true&title=true&content=true")
							p.clearfix
					include inc/share.pug
				//- Вывод ссылок на Гос. Сайты
				.main-footer
					include tpl/sites_link.pug
				//- Форма
				include tpl/sendbot.pug
			//- Подвал
			include tpl/footer.pug
		//- Скрипты
		include inc/body_close.pug
