									|Фамилия
							.form-group-item.form-group.clearfix
								input.form-group-item-control.form-control(type="text" name="first_name" value="[+first_name.value+]" placeholder="Фамилия" autocomplete="off")
								label
									|Имя
							.form-group-item.form-group.clearfix
								input.form-group-item-control.form-control(type="text" name="email" value="[+email.value+]" placeholder="Имя" required="required" autocomplete="off")
								label
									|Email
							.form-group-item.form-group.clearfix
								input.form-group-item-control.form-control(type="text" name="phone" value="[+phone.value+]" placeholder="Email" required="required" autocomplete="off")
								label
									|Телефон
							.form-group-item.form-group.clearfix
								textarea.form-group-item-control.form-control(type="text" name="message" rows="4" placeholder="Ваше сообщение" required="required" autocomplete="off")
									|[+message.value+]
								label
									|Ваше сообщение
							.form-group-item.form-group.clearfix
								label
									input.form-group-item-control(type="checkbox" name="policy" required="required" checked)
