.headerpage
	.header-page.container
		.header-group
			p.site-title
				|<@IF:[*id:is(1)*]>[(site_name)]<@ELSE>
				a(href="[(site_url)]")
					|[(site_name)]
				|<@ENDIF>
			p.site-description
				|[(site_description)]
			#search
				form(action="/search/" method="GET" data-id="search-form")
					|<input type="text" name="search" value="[!$_GET['search']!]" placeholder="Поиск" required="required" />
					button.btn.icon-search(type="submit")
	.header-slick
		|<@IF:[*template:neq(11)*]><@IF:[*template:neq(13)*]>[[multiTV?
		|	&fromJson=`[(sliders)]`
		|	&tvName=`sliders`
		|]]<@ENDIF><@ENDIF><@IF:[*template:neq(11)*]>
		include menu.pug
		|<@ELSE>
		|[!DLMenu?
		|	&outerTpl=`@CODE: <div class="header-navigation bvi-no-styles"><nav class="bvi-no-styles" role="navigation"><button type="button" class="bvi-no-styles"><i class="icon-menu-open bvi-no-styles"></i></button><ul class="[+classNames+] bvi-no-styles">[+wrap+]</ul></nav></div>`
		|	&rowHereTpl=`@CODE:<li class="[+classNames+] bvi-no-styles"><a class="bvi-no-styles" href="[+url+]" [+link_attributes+]>[+title+]</a></li>`
		|	&parentRowTpl=`@CODE:<li class="[+classNames+] bvi-no-styles"><a class="bvi-no-styles" href="[+url+]" [+link_attributes+]>[+title+]</a><i class="icon-down bvi-no-styles"></i>[+wrap+]</li>`
		|	&parentRowHereTpl=`@CODE:<li class="[+classNames+] bvi-no-styles"><a class="bvi-no-styles" href="[+url+]" [+link_attributes+]>[+title+]</a><i class="icon-down bvi-no-styles"></i>[+wrap+]</li>`
		|	&parentRowActiveTpl=`@CODE:<li class="[+classNames+] bvi-no-styles"><a class="bvi-no-styles" href="[+url+]" [+link_attributes+]>[+title+]</a><i class="icon-down bvi-no-styles"></i>[+wrap+]</li>`
		|	&innerTpl=`@CODE: <ul class="[+classNames+] bvi-no-styles">[+wrap+]</ul>`
		|	&innerRowTpl=`@CODE:<li class="[+classNames+] bvi-no-styles"><a class="bvi-no-styles" href="[+url+]" [+link_attributes+]>[+title+]</a></li>`
		|	&innerRowHereTpl=`@CODE:<li class="[+classNames+] bvi-no-styles"><a class="bvi-no-styles" href="[+url+]" [+link_attributes+]>[+title+]</a></li>`
		|	&parents=`0`
		|	&addWhereList=`hidemenu = 0 AND parent NOT IN(2) AND parent NOT IN(69)`
		|	&showParent=`1`
		|	&innerClass=`inner`
		|	&outerClass=`outer`
		|	&rowClass=``
		|	&firstClass=``
		|	&lastClass=``
		|	&levelClass=``
		|	&webLinkClass=`web-link`
		|	&parentClass=`parent`
		|	&hereClass=`here`
		|	&activeClass=`active`
		|	&oddClass=``
		|	&evenClass=``
		|	&stateClass=`stateClass`
		|	&urlScheme=`full`
		|	&maxDepth=`2`
		|!][!DLCrumbs
		|	&showCurrent=`1`
		|	&tpl=`@CODE:<li><a href="[+url+]" title="[+e.title+]"><span>[+title+]</span></a></li>`
		|	&tplCurrent=`@CODE:<li class="active"><span><span>[+title+]</span></span></li>`
		|	&ownerTPL=`@CODE:<nav><ul class="breadcrumb bvi-no-styles" aria-label="Breadcrumb">[+crumbs.wrap+]</ul></nav>`
		|!]<@ENDIF>
